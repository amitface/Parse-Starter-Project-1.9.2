<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#141617"
    tools:context="com.parse.snapstar.Register"
    android:foregroundTint="#6847ea">



    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="name"
        android:textColor="#4E4E50"
        android:textColorHint="#4E4E50"
        android:layout_margin="10dp"
        android:layout_alignTop="@+id/name"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:capitalize="none"

        android:backgroundTint="#6847ea" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="password"
        android:password="true"
        android:textColor="#4E4E50"
        android:textColorHint="#4E4E50"
        android:layout_margin="10dp"
        android:layout_above="@+id/emailtext"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:backgroundTint="#6847ea"
        android:capitalize="none"
        android:foregroundTint="#6847ea" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="re-password"
        android:password="true"
        android:textColor="#4E4E50"
        android:textColorHint="#4E4E50"
        android:layout_margin="10dp"
        android:backgroundTint="#6847ea"
        android:capitalize="none"
        android:foregroundTint="#6847ea" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textColor="#4E4E50"
        android:textColorHint="#4E4E50"
        android:layout_alignTop="@+id/emailtext"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:backgroundTint="#6847ea"
        android:backgroundTintMode="multiply"
        android:capitalize="none"
        android:foregroundTint="#6847ea" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:text="@string/submit"
        android:onClick="onClick"
        android:background="#4D5055"
        android:textColor="#96999A"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/cancel"
        android:layout_toStartOf="@+id/cancel" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:text="@string/cancel"
        android:onClick="onClick"
        android:visibility="gone"
        android:background="#4D5055"
        android:textColor="#96999A"
        android:layout_alignBaseline="@+id/submit"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</LinearLayout>
